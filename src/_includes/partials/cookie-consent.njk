{% if site[locale].cookieConsent.enabled %}
<div class="cookie-consent" id="cookieConsent">
  <button class="cookie-consent__close" aria-label="Close cookie banner">&times;</button>
  <div class="cookie-consent__container container">
    <div class="cookie-consent__content">
      <h3 class="cookie-consent__title">{{ site[locale].cookieConsent.title }}</h3>
      <p class="cookie-consent__text">{{ site[locale].cookieConsent.content | markdown | safe }}</p>
    </div>
    <div class="cookie-consent__actions">
      <button class="button" id="acceptCookies">{{ site[locale].cookieConsent.acceptText }}</button>
      <button class="button" id="declineCookies">{{ site[locale].cookieConsent.declineText }}</button>
    </div>
  </div>
</div>
{% endif %}