<nav class="nav">
  <div class="nav__container container">
    <a href="{% if locale == 'fr' %}/fr/{% else %}/{% endif %}" class="nav__logo">{{ site[locale].title }}</a>
    <div class="nav__actions">
      <div class="language-switcher">
        {% set currentUrl = page.url %}
        {% if locale == 'fr' %}
          <a href="{{ currentUrl | replace('/fr/', '/') }}" class="{% if locale != 'fr' %}active{% endif %}">EN</a>
        {% else %}
          <a href="/{{ currentUrl | replace('/', '') }}" class="{% if locale != 'fr' %}active{% endif %}">EN</a>
        {% endif %}
        <span>/</span>
        {% if locale == 'fr' %}
          <a href="{{ currentUrl }}" class="{% if locale == 'fr' %}active{% endif %}">FR</a>
        {% else %}
          <a href="/fr/{{ currentUrl | replace('/', '') }}" class="{% if locale == 'fr' %}active{% endif %}">FR</a>
        {% endif %}
      </div>
      <button class="menu-trigger" aria-label="Toggle Menu">Menu</button>
    </div>
  </div>
  <div class="menu-overlay">
    <div class="container">
      <ul>
        <li><a href="{% if locale == 'fr' %}/fr/{% else %}/{% endif %}">{{ 'Accueil' if locale == 'fr' else 'Home' }}</a></li>
        <li><a href="{% if locale == 'fr' %}/fr/projects{% else %}/projects{% endif %}">{{ 'Projets' if locale == 'fr' else 'Projects' }}</a></li>
        <li><a href="{% if locale == 'fr' %}/fr/blog{% else %}/blog{% endif %}">Blog</a></li>
        <li><a href="{% if locale == 'fr' %}/fr/contact{% else %}/contact{% endif %}">Contact</a></li>
      </ul>
    </div>
  </div>
</nav>