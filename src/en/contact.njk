<header class="page-header">
  <div class="container container--narrow">
    <h1>Contact Us</h1>
    <p>Let's create something amazing together</p>
  </div>
</header>

<section class="container">
  <div class="contact-grid">
    <div class="contact-info">
      <h2>Get in Touch</h2>
      <p>We're always looking for new projects and collaborations. Drop us a line to start the conversation.</p>
      
      <div class="contact-details">
        <div class="contact-item">
          <h3>Email</h3>
          <p><a href="mailto:hello@agency.com">hello@agency.com</a></p>
        </div>
        
        <div class="contact-item">
          <h3>Phone</h3>
          <p><a href="tel:+1234567890">+1 (234) 567-890</a></p>
        </div>
        
        <div class="contact-item">
          <h3>Follow Us</h3>
          <div class="social-links">
            <a href="{{ site.social.twitter }}">Twitter</a>
            <a href="{{ site.social.instagram }}">Instagram</a>
            <a href="{{ site.social.linkedin }}">LinkedIn</a>
          </div>
        </div>
      </div>
    </div>
    
    <form class="contact-form" name="contact" method="POST" data-netlify="true">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
      </div>
      
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>
      
      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required></textarea>
      </div>
      
      <button type="submit" class="button">Send Message</button>
    </form>
  </div>
</section>