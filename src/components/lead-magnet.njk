{% if componentData.type == "leadMagnet" %}
  <section class="lead-magnet container">
    <div class="lead-magnet__grid">
      <div class="lead-magnet__content">
        <h2>{{ componentData.title }}</h2>
        <p>{{ componentData.description }}</p>
        <form class="lead-magnet__form" name="lead-magnet" method="POST" data-netlify="true">
          <input type="email" name="email" placeholder="Enter your email" required>
          <button type="submit" class="button">{{ componentData.buttonText }}</button>
        </form>
      </div>
      <div class="lead-magnet__image">
        <img src="{{ componentData.image }}" alt="{{ componentData.imageAlt }}">
      </div>
    </div>
  </section>
{% endif %}